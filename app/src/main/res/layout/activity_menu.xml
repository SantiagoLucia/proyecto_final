<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background_page" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="350dp"
        android:layout_height="400dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/aDatosControl"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="datos control"
            android:background="@drawable/orange_button_background"
            android:drawableRight="@android:drawable/ic_menu_today"
            android:drawablePadding="0dp"
            android:paddingRight="30dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="40dp"/>

        <Button
            android:id="@+id/aEstacionar"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="aEstacionar"
            android:text="@string/boton_a_estacionar"
            android:background="@drawable/orange_button_background"
            android:drawableRight="@android:drawable/ic_menu_mylocation"
            android:drawablePadding="0dp"
            android:paddingRight="30dp"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="40dp"/>

        <Button
            android:id="@+id/aVerMultas"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="aInfracciones"
            android:text="consultar infracciones"
            android:background="@drawable/orange_button_background"
            android:drawableRight="@android:drawable/stat_notify_error"
            android:drawablePadding="0dp"
            android:paddingRight="30dp"
            android:textSize="21sp"
            android:textStyle="bold"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="40dp"/>

        <Button
            android:id="@+id/aTelefonosUtiles"
            android:layout_width="350dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/orange_button_background"
            android:drawableRight="@android:drawable/stat_sys_phone_call"
            android:drawablePadding="0dp"
            android:paddingRight="30dp"
            android:gravity="center"
            android:text="telefonos utiles"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/red_button_background"
        android:drawableRight="@android:drawable/ic_menu_revert"
        android:drawablePadding="0dp"
        android:paddingRight="30dp"
        android:gravity="center"
        android:onClick="cerrarSesion"
        android:text="Cerrar SesiÃ³n"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.142"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282" />
</androidx.constraintlayout.widget.ConstraintLayout>